        }

        function generateNodeGroupsTable(nodeGroups) {
            if (!nodeGroups || nodeGroups.length === 0) {
                return '<div class="no-data">No managed node groups found</div>';
            }

            let html = `
                <table class="detail-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Version</th>
                            <th>Capacity Type</th>
                            <th>Instance Types</th>
                            <th>AMI Type</th>
                        </tr>
