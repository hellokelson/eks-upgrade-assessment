            html += '</tbody></table>';
            return html;
        }

        function generateAddonsTable(addons) {
            if (!addons || addons.length === 0) {
                return '<div class="no-data">No EKS addons found</div>';
            }

            let html = `
                <table class="detail-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Version</th>
                            <th>Status</th>
                            <th>Type</th>
                        </tr>
                    </thead>
