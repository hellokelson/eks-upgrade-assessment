        function generateFargateTable(fargateProfiles) {
            if (!fargateProfiles || fargateProfiles.length === 0) {
                return '<div class="no-data">No Fargate profiles found</div>';
            }

            let html = `
                <table class="detail-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
